%html
  %head
    %title What shall we watch?
    %link{:href=>'base.css',:media=>'screen',:rel=>'stylesheet',:type=>'text/css'} 
    %script{:src=>"/javascript/google.js",:type=>"text/javascript"}
  %body
    %h1
      What shall we watch?
  
    %h2
      Start entering the name of the films below.
  
    #film_form
      %form(action='/lookup' method='POST' class='film_form')
        %label Film
        %input(type='text' name='film_name' value='' class='film_name')
        %input(type='submit' value='Search')

    #film_results_box
      
    %script{:src=>"/javascript/jquery-1.4.2.min.js",:type=>"text/javascript"}
    %script{:src=>"/javascript/jquery-form.js",:type=>"text/javascript"}    
    %script{:src=>"/javascript/application.js",:type=>"text/javascript"}
